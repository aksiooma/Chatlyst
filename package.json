{
  "name": "chatbot-ai",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite --mode development ",
    "build": "vite build --mode production concurrently \"tsc && vite build\" \"npm run build:server\"",
    "build:server": "cd server && npm run build",
    "start": "concurrently \"npm run start:frontend\" \"npm --prefix ./server run start:backend\"",
    "start:frontend": "vite --host --port 3001",
    "start:backend": "cd server && npm run dev:server",
    "start:prod:server": "node server.js",
    "start:prod": "concurrently \"npm run start:prod:server\" \"serve -s dist\"",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "tsc": "tsc"
  },
  "dependencies": {
    "@types/axios": "^0.14.0",
    "@types/express-session": "^1.17.10",
    "@types/styled-components": "^5.1.29",
    "axios": "^1.6.7",
    "express-session": "^1.17.3",
    "framer-motion": "^10.16.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-textarea-autosize": "^8.5.3",
    "styled-components": "^6.1.0",
    "uuid": "^9.0.1",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@originjs/vite-plugin-commonjs": "^1.0.3",
    "@types/node": "^20.11.0",
    "@types/react": "^18.2.36",
    "@types/react-dom": "^18.2.14",
    "@types/uuid": "^9.0.6",
    "@typescript-eslint/eslint-plugin": "^6.10.0",
    "@typescript-eslint/parser": "^6.10.0",
    "@vitejs/plugin-react": "^4.1.1",
    "concurrently": "^8.2.2",
    "eslint": "^8.53.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.4",
    "nodemon": "^3.0.1",
    "ts-node": "^10.9.1",
    "tsc-watch": "^6.0.4",
    "typescript": "^5.3.3",
    "vite": "^4.5.0",
    "vite-plugin-qrcode": "^0.2.2"
  }
}
